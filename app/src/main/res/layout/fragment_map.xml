<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- Header with controls -->
    <com.google.android.material.card.MaterialCardView
        style="@style/Widget.EventPlanner.Card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:backgroundTint="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Events Map"
                android:textColor="@color/on_surface"
                android:textSize="18sp"
                android:textStyle="bold" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_refresh_map"
                style="@style/Widget.Material3.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="Refresh"
                android:textSize="12sp"
                android:textStyle="bold"
                app:backgroundTint="@color/primary"
                app:icon="@drawable/ic_refresh_24"
                app:iconSize="14dp"
                app:iconTint="@color/on_primary"
                android:textColor="@color/on_primary"
                app:cornerRadius="12dp"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp"
                app:elevation="2dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_location_map"
                style="@style/Widget.Material3.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textSize="12sp"
                android:textStyle="bold"
                app:backgroundTint="@color/primary"
                app:icon="@drawable/ic_place_24"
                app:iconSize="14dp"
                app:iconTint="@color/on_primary"
                android:textColor="@color/on_primary"
                app:cornerRadius="12dp"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp"
                app:elevation="2dp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Map View -->
    <FrameLayout
        android:id="@+id/map_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="16dp" />

    <!-- Event Details Bottom Sheet -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_event_details"
        style="@style/Widget.EventPlanner.Card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:backgroundTint="@color/white"
        android:visibility="gone"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_map_event_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/on_surface"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_map_event_type"
                    style="@style/Widget.Material3.Chip.Assist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_map_event_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:ellipsize="end"
                android:maxLines="3"
                android:textColor="@color/on_surface_variant"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_calendar_24"
                        app:tint="@color/on_surface_variant" />

                    <TextView
                        android:id="@+id/tv_map_event_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:textColor="@color/on_surface_variant"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_place_24"
                        app:tint="@color/on_surface_variant" />

                    <TextView
                        android:id="@+id/tv_map_event_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/on_surface_variant"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_close_details"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="Close"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:textColor="@color/primary"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="8dp"
                    app:cornerRadius="12dp"
                    app:iconTint="@color/primary"
                    app:elevation="2dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_view_tickets"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View Tickets"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    app:backgroundTint="@color/primary"
                    android:textColor="@color/on_primary"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="8dp"
                    app:cornerRadius="12dp"
                    app:elevation="2dp" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>