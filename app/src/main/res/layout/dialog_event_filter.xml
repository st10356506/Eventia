<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/outline_variant"
    app:cardBackgroundColor="@android:color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="600dp"
        android:scrollbars="none"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="28dp">

            <!-- Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Filter Events"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/on_surface"
                android:letterSpacing="0.01"
                android:layout_marginBottom="24dp" />

            <!-- Categories Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Event Categories"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/on_surface"
                android:letterSpacing="0.02"
                android:layout_marginBottom="12dp" />

            <!-- Chips -->
            <com.google.android.material.chip.ChipGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:chipSpacing="10dp"
                app:chipSpacingHorizontal="10dp">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_music"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Music"
                    android:textSize="14sp"
                    app:chipCornerRadius="12dp"
                    app:chipMinHeight="40dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_sports"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sports"
                    android:textSize="14sp"
                    app:chipCornerRadius="12dp"
                    app:chipMinHeight="40dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_arts"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Arts"
                    android:textSize="14sp"
                    app:chipCornerRadius="12dp"
                    app:chipMinHeight="40dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_film"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Film"
                    android:textSize="14sp"
                    app:chipCornerRadius="12dp"
                    app:chipMinHeight="40dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_miscellaneous"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Miscellaneous"
                    android:textSize="14sp"
                    app:chipCornerRadius="12dp"
                    app:chipMinHeight="40dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_clear"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Clear"
                    android:textSize="14sp"
                    app:chipCornerRadius="12dp"
                    app:chipMinHeight="40dp" />
            </com.google.android.material.chip.ChipGroup>

            <!-- Search Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Search Keyword"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/on_surface"
                android:letterSpacing="0.02"
                android:layout_marginBottom="12dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                app:boxStrokeColor="@color/primary"
                app:hintTextColor="@color/primary"
                app:boxCornerRadiusTopStart="14dp"
                app:boxCornerRadiusTopEnd="14dp"
                app:boxCornerRadiusBottomStart="14dp"
                app:boxCornerRadiusBottomEnd="14dp"
                app:startIconDrawable="@drawable/ic_search_24"
                app:startIconTint="@color/on_surface_variant">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_search_keyword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Search for events..."
                    android:inputType="text"
                    android:textSize="15sp"
                    android:paddingVertical="16dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_marginTop="8dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_cancel_filter"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:textSize="15sp"
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="12dp"
                    android:layout_marginEnd="12dp"
                    app:cornerRadius="12dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_apply_filter"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Apply Filter"
                    android:textSize="15sp"
                    android:paddingHorizontal="28dp"
                    android:paddingVertical="12dp"
                    app:cornerRadius="12dp"
                    app:icon="@drawable/ic_add_24"
                    app:iconGravity="start"
                    app:iconSize="18dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</com.google.android.material.card.MaterialCardView>